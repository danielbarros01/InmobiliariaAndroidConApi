<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/bordes_redondeado_plata">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bordes_gris">

            <TextView
                android:id="@+id/labelPagos"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Código pago:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="1dp" />

            <TextView
                android:id="@+id/tvCodigoPago"
                android:layout_width="164dp"
                android:layout_height="34dp"
                android:layout_marginStart="1dp"
                android:paddingLeft="20dp"
                android:text="900"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/labelPagos"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bordes_gris">

            <TextView
                android:id="@+id/labelPagos2"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Número de pago:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/tvNumeroPago"
                android:layout_width="164dp"
                android:layout_height="34dp"
                android:paddingLeft="20dp"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/labelPagos2"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bordes_gris">

            <TextView
                android:id="@+id/labelPagos3"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Código de contrato:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="-2dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/tvCodigoContratoPago"
                android:layout_width="164dp"
                android:layout_height="34dp"
                android:layout_marginStart="2dp"
                android:paddingLeft="20dp"
                android:text="801"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/labelPagos3"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="1dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bordes_gris">

            <TextView
                android:id="@+id/labelPagos4"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Importe:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/tvImportePago"
                android:layout_width="164dp"
                android:layout_height="34dp"
                android:paddingLeft="20dp"
                android:text="$21000.0"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/labelPagos4"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/bordes_gris">

            <TextView
                android:id="@+id/labelPagos5"
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Fecha de pago:"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="2dp" />

            <TextView
                android:id="@+id/tvFechaPago"
                android:layout_width="164dp"
                android:layout_height="34dp"
                android:layout_marginStart="2dp"
                android:paddingLeft="20dp"
                android:text="20/06/2020"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                app:layout_constraintStart_toEndOf="@+id/labelPagos5"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="3dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>